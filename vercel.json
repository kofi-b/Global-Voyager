{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/frontend/(.*)",
      "handle": "filesystem",
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}